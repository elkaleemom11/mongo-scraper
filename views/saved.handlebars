<section class="section">
    <div class="container">
        <h2 class="title">Saved Articles</h2>
        <div id="saved-results">
            <ul>
                {{#each article}}
                <li>
                    <div><a href={{article.url}}>{{article.title}}</a></div>
                    <div>
                        <p>{{article.description}}</p>
                    </div>
                </li>{{!-- article title and summary --}} {{/each}}

            </ul>
        </div>
    </div>
