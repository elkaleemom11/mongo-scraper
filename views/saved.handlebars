<div class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p id="comments-header" class="modal-card-title">
                {{!-- Modal header text dynamically rendered --}}
            </p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <div id="comments-list">
                <p>Write the first comment for this article.</p>
            </div>
            <hr>
            <div>
                <textarea id="new-comment-field"></textarea>
            </div>
        </section>
        <footer class="modal-card-foot">
            {{!-- Save comment button dynamically rendered to include data-id attribute of article--}}
        </footer>
    </div>
</div>

